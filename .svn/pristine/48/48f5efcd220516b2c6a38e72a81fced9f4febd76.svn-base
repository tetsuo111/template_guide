 *- チェックボックス(order.html 利用規約)
 *--------------------------------------------------------------------*/
/* order.html 利用規約 checkbox */
.order-terms input{
	width       : 30px;
	height      : 30px;
	margin-right: 10px;
}
/*--------------------------------------------------------------------
 *- ラジオボタン(order.html メッセージ)
 *--------------------------------------------------------------------*/
.order .radio {
	border-radius: 100%;
	border       : 1px solid #666;
	cursor       : pointer;
	display      : inline-block;
	height       : 15px;
	overflow     : hidden;
	position     : relative;
	top          : 3px;
	width        : 15px;
}
.order .radio:before {
	background-color: #0084d4;
	border-radius   : 100%;
	content         : '';
	display         : block;
	height          : 11px;
	position        : absolute;
	top             : 1px;
	left            : 1px;
	width           : 11px;
	z-index         : 1;
}
.order .radio input[type="radio"] {
	-moz-appearance   : none;
	-webkit-appearance: none;
	box-shadow        : 20px 0px #fff;
	display           : block;
	height            : 20px;
	position          : absolute;
	/* チェックされていない方の色を飛ばすために付与 */
	left              : -23px;
	width             : 20px;
	z-index           : 2;
}
.order .radio input[type="radio"]:checked {
	box-shadow : none;
}
.order .radio input[type="radio"]:focus {
	box-shadow: 20px 0px #fff;
	opacity   : 0.2;
}
